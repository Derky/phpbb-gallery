    <meta name="generator" content="Phpbb.ModTeam.Tools (c#)" />
  </header>
  <action-group>
    <open src="portal.php">
      <edit>
        <find><![CDATA[$user->setup('mods/lang_portal');]]></find>
        <action type="after-add"><![CDATA[include($phpbb_root_path . 'gallery/includes/functions_recent.' . $phpEx);
$display = array(
	'name'		=> true,
	'poster'	=> true,
	'time'		=> true,
	'views'		=> true,
	'ratings'	=> false,
	'comments'	=> false,
	'album'		=> true,
);
/**
* rows		numeric default 1,
* columns	numeric default 4,
* display	array,
* modes		string(recent|random|both),
*/
recent_gallery_images(1, 4, $display, 'both');]]></action>
      </edit>
    </open>
    <open src="styles/prosilver/template/portal/portal_body.html">
      <edit>
        <find><![CDATA[			<!-- INCLUDE portal/block/welcome.html -->
			<!-- ENDIF -->
		<!-- ENDIF -->]]></find>
        <action type="after-add"><![CDATA[		<!-- INCLUDE gallery_recent_body.html -->]]></action>
      </edit>
    </open>
  </action-group>
