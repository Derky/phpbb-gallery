    <mod-version>
      <major>0</major>
      <minor>2</minor>
      <revision>1</revision>
    </mod-version>
    <installation>
      <level>easy</level>
      <time>240</time>
      <target-version>
        <target-primary>3.0.RC7</target-primary>
        <target-major allow="exact">3</target-major>
        <target-minor allow="exact">0</target-minor>
      </target-version>
    </installation>
    <history>
      <entry>
        <date>2007-11-26</date>
        <rev-version>
          <major>0</major>
          <minor>2</minor>
          <revision>1</revision>
        </rev-version>
        <changelog lang="en-GB">
          <change>added subalbums</change>
          <change>made the converter even take phpbb2 plus galleries</change>
          <change>renamed the tables to gallery (the MOD name)</change>
          <change>fixed some minor bugs</change>
        </changelog>
      </entry>
    </history>
    <meta name="generator" content="Phpbb.ModTeam.Tools (c#)" />
  </header>
  <action-group>
    <copy>
      <file from="root/adm/style/acp_gallery.html" to="adm/style/acp_gallery.html" />
      <file from="root/gallery/*.*" to="gallery/*.*" />
      <file from="root/gallery/includes/*.*" to="gallery/includes/*.*" />
      <file from="root/gallery/upload/*.*" to="gallery/upload/*.*" />
      <file from="root/includes/acp/acp_gallery.php" to="includes/acp/acp_gallery.php" />
      <file from="root/includes/acp/info/acp_gallery.php" to="includes/acp/info/acp_gallery.php" />
      <file from="root/install_gallery/*.*" to="install_gallery/*.*" />
      <file from="root/install_gallery/schemas/*.*" to="install_gallery/schemas/*.*" />
      <file from="root/language/en/mods/info_acp_gallery.php" to="language/en/mods/info_acp_gallery.php" />
      <file from="root/language/en/mods/gallery.php" to="language/en/mods/gallery.php" />
      <file from="root/language/en/mods/gallery_acp.php" to="language/en/mods/gallery_acp.php" />
      <file from="root/styles/prosilver/imageset/en/button_upload_image.gif" to="styles/prosilver/imageset/en/button_upload_image.gif" />
      <file from="root/styles/prosilver/template/*.*" to="styles/prosilver/template/*.*" />
      <file from="root/styles/prosilver/theme/images/icon_gallery.gif" to="styles/prosilver/theme/images/icon_gallery.gif" />
    </copy>
    <open src="includes/functions.php">
      <edit>
        <find><![CDATA[// The following assigns all _common_ variables that may be used at any point in a template.]]></find>
        <action type="after-add"><![CDATA[	$user->add_lang('mods/info_acp_gallery');]]></action>
      </edit>
      <edit>
        <find><![CDATA[		'L_GALLERY' => $user->lang['GALLERY'],
		'L_GALLERY_EXPLAIN' => $user->lang['GALLERY_EXPLAIN'],

		'U_GALLERY' => append_sid("{$phpbb_root_path}gallery/"),]]></find>
        <action type="replace-with"><![CDATA[		'U_GALLERY_MOD'			=> append_sid("{$phpbb_root_path}gallery/index.$phpEx"),]]></action>
      </edit>
    </open>
    <open src="language/en/common.php">
      <edit>
        <find><![CDATA[	'AIM'							=> 'AIM',

	'GALLERY'						=> 'Gallery',
	'GALLERY_EXPLAIN'					=> 'Picture Gallery',]]></find>
        <action type="replace-with"><![CDATA[	'AIM'							=> 'AIM',]]></action>
      </edit>
    </open>
    <open src="styles/prosilver/template/overall_header.html">
      <edit>
        <find><![CDATA[<li class="icon-gallery"><a href="{U_GALLERY}" title="{L_GALLERY_EXPLAIN}">{L_GALLERY}</a></li]]></find>
        <action type="replace-with"><![CDATA[<li class="icon-gallery"><a href="{U_GALLERY_MOD}" title="{L_GALLERY_EXPLAIN}">{L_GALLERY}</a></li>]]></action>
      </edit>
    </open>
    <open src="styles/prosilver/theme/buttons.css">
      <edit>
        <find><![CDATA[.buttons div.upload-icon	{ width: {IMG_BUTTON_UPLOAD_IMAGE_WIDTH}px; height: {IMG_BUTTON_UPLOAD_IMAGE_HEIGHT}px; }]]></find>
        <action type="replace-with"><![CDATA[.buttons div.upload-icon	{ width: 119px; height: 25px; }]]></action>
      </edit>
    </open>
    <open src="styles/prosilver/theme/colours.css">
      <edit>
        <find><![CDATA[..upload-icon, .upload-icon a 	{ background-image: url("{IMG_BUTTON_UPLOAD_IMAGE_SRC}") ;}]]></find>
        <action type="replace-with"><![CDATA[.upload-icon, .upload-icon a			{ background-image: url("{T_IMAGESET_LANG_PATH}/button_upload_image.gif"); }]]></action>
      </edit>
    </open>
    <diy-instructions lang="en-gb">see normal install-file</diy-instructions>
  </action-group>
</mod>